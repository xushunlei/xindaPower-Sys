<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xinda.dao.CurrentPriceMapper" >
  <resultMap id="BaseResultMap" type="com.xinda.entity.CurrentPrice" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="price" property="price" jdbcType="DECIMAL" />
    <result column="start_date" property="startDate" jdbcType="TIMESTAMP" />
    <association column="operator" property="priceOperator" resultMap="com.xinda.dao.UserMapper.UserMap"></association>
  </resultMap>
  <sql id="Base_Column_List" >
    id, create_date, price, operator, start_date
  </sql>
  <update id="updateCurrentPrice" parameterType="com.xinda.entity.CurrentPrice" >
    update current_price
    <set >
      <if test="createDate != null" >
        create_date = #{createDate,jdbcType=TIMESTAMP},
      </if>
      <if test="price != null" >
        price = #{price,jdbcType=DECIMAL},
      </if>
      <if test="operator != null" >
        operator = #{operator,jdbcType=VARCHAR},
      </if>
      <if test="startDate != null">
      	start_date = #{startDate}
      </if>
    </set>
  </update>
  <select id="selectCurrentPrice" resultMap="BaseResultMap">
  	select *
  	from current_price
  	limit 0,1
  </select>
  <update id="updateByPrimaryKey" parameterType="com.xinda.entity.CurrentPrice" >
    update current_price
    set create_date = #{createDate,jdbcType=TIMESTAMP},
      price = #{price,jdbcType=DECIMAL},
      operator = #{operator,jdbcType=VARCHAR}
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>